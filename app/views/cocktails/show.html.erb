<h2>Details of the cocktail '<%= @cocktail.name.capitalize %>'</h2>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% @cocktail.doses.each do |dose| %>
<p>Description : <%= dose.description %></p>
<p>Ingredient :<%= dose.ingredient.name %></p>
<%end%>

<%= link_to "Add a ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-treehouse" %>
<%= link_to "Revenir aux cocktails", cocktails_path, class: "btn btn-treehouse" %>

