<%= render 'navbar' %>
<div class="container">
  <h1> Nos meilleurs cocktails</h1>
  <a><%= link_to " Add a cocktail ", new_cocktail_path, class: 'btn btn-treehouse'%></a>
  <div class="row">
   <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-md-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">
        <div class="card-category"><%= cocktail.name.capitalize %>
        </div>
          <%= link_to "",cocktail_path(cocktail), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>


